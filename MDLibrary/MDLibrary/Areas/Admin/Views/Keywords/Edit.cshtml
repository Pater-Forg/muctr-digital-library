@model KeywordsEditViewModel
@{
	ViewData["Title"] = Model.Value + " - редактировать";
}

<form asp-area="Admin" asp-controller="Keywords" asp-action="Edit" method="post">
	<h3>Редактирование</h3>
	<p class="text-danger">@ViewBag.ErrorMessage</p>
	<div class="form-group mb-2">
		<label asp-for="@Model.Id">ID</label>
		<input asp-for="@Model.Id" readonly="true" class="form-control" value="@Model.Id" />
	</div>
	<div class="form-group mb-2">
		<label asp-for="@Model.Value">Имя</label>
		<input asp-for="@Model.Value" class="form-control" value="@Model.Value" />
		<span asp-validation-for="@Model.Value"></span>
	</div>
	<button type="submit" class="btn btn-primary">Сохранить</button>
</form>