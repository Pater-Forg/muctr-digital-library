@model KeywordsShortInfoViewModel
@{
	ViewData["Title"] = Model.Value + " - удалить";
}

<form asp-area="Admin" asp-controller="Keywords" asp-action="Delete" method="post">
	<h3>Вы действительно хотите удалить ключевое слово "@Model.Value"?</h3>
	<p class="text-danger">@ViewBag.ErrorMessage</p>
	<input type="hidden" name="id" value="@Model.Id" />
	<input type="submit" class="btn btn-danger" value="Удалить" />
</form>