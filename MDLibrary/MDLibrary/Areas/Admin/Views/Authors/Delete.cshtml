@model AuthorsShortInfoViewModel
@{
	ViewData["Title"] = Model.Name + " - удалить";
}

<form asp-area="Admin" asp-controller="Authors" asp-action="Delete" method="post">
	<h3>Вы действительно хотите удалить автора "@Model.Name"?</h3>
	<p class="text-danger">@ViewBag.ErrorMessage</p>
	<input type="hidden" name="id" value="@Model.Id" />
	<input type="submit" class="btn btn-danger" value="Удалить" />
</form>