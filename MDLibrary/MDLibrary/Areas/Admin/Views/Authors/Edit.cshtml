@model AuthorsEditViewModel
@{
	ViewData["Title"] = Model.Name + " - редактировать";
}

<form asp-area="Admin" asp-controller="Authors" asp-action="Edit" method="post">
	<h3>Редактирование</h3>
	<p class="text-danger">@ViewBag.ErrorMessage</p>
	<div class="form-group mb-2">
		<label asp-for="@Model.Id">ID</label>
		<input asp-for="@Model.Id" readonly="true" class="form-control" value="@Model.Id" />
	</div>
	<div class="form-group mb-2">
		<label asp-for="@Model.Name">Имя</label>
		<input asp-for="@Model.Name" class="form-control" value="@Model.Name" />
		<span asp-validation-for="@Model.Name"></span>
	</div>
	<button type="submit" class="btn btn-primary">Сохранить</button>
</form>