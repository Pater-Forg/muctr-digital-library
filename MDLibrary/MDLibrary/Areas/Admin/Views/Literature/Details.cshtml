@model LiteratureEditAndDetailsViewModel
@{
	ViewData["Title"] = Model.Caption + " - подробности";
}

<table class="table table-borderless">
	<tr>
		<th>ID</th>
		<td>@Model.Id</td>
	</tr>
	<tr>
		<th>Название</th>
		<td>@Model.Caption</td>
	</tr>
	<tr>
		<th>Авторы</th>
		<td>@Model.Authors</td>
	</tr>
	<tr>
		<th>Ключевые слова</th>
		<td>@Model.Keywords</td>
	</tr>
	<tr>
		<th>Количество страниц</th>
		<td>@Model.PageCount</td>
	</tr>
	<tr>
		<th>Год издания</th>
		<td>@Model.PublishYear</td>
	</tr>
	<tr>
		<th>Место издания</th>
		<td>@Model.PublishLocation</td>
	</tr>
	<tr>
		<th>Издательство</th>
		<td>@Model.Publisher</td>
	</tr>
	<tr>
		<th>ISBN</th>
		<td>@Model.Isbn</td>
	</tr>
	<tr>
		<th>ББК</th>
		<td>@Model.Bbc</td>
	</tr>
	<tr>
		<th>УДК</th>
		<td>@Model.Udc</td>
	</tr>
	<tr>
		<th>Аннотация</th>
		<td>@Model.Abstract</td>
	</tr>
</table>