@model LoginViewModel

@{
	ViewData["Title"] = "Войти";
}

<section class="mb-3">
    <div>
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4 mb-3">
                    <i class="fas fa-flask fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">МИБС</span>
                </div>

                <div class="d-flex align-items-center px-5 ms-xl-4 pt-2 pt-xl-0 mt-xl-n5">

                    <form asp-area="Identity" asp-controller="Auth" asp-action="Login" method="post" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Вход</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="@Model.Username" class="form-control form-control-lg" />
                            <label asp-for="@Model.Username" class="form-label">Имя пользователя</label>
                            <span class="text-danger" asp-validation-for="@Model.Username"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="@Model.Password" type="password" class="form-control form-control-lg" />
                            <label asp-for="@Model.Password" class="form-label">Пароль</label>
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>

                        <div class="form-check">
                            <input asp-for="@Model.RememberMe" class="form-check-input" type="checkbox" checked>
                            <label asp-for="@Model.RememberMe" class="form-check-label">
                                Запомнить меня
                            </label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-info btn-block">Войти</button>
                        </div>

                        <p class="small mb-2 pb-lg-2"><a class="text-muted" href="#!">Забыли пароль?</a></p>
                        <p>Ещё нет аккаунта? <a asp-area="Identity" asp-controller="Auth" asp-action="Register" class="link-info">Регистрация</a></p>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="/images/login-page.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>