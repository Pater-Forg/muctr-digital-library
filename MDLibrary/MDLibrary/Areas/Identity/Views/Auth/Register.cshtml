@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<section class="vh-100">
    <div class="object-fit-contain">
        <div class="row">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4 mb-3">
                    <i class="fas fa-flask fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">МИБС</span>
                </div>

                <div class="d-flex align-items-center px-5 ms-xl-4 pt-2 pt-xl-0 mt-xl-n5">

                    <form asp-area="Identity" asp-controller="Auth" asp-action="Register" method="post" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Регистрация</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="@Model.Email" class="form-control form-control-lg" />
                            <label asp-for="@Model.Email" class="form-label">Ваша почта</label>
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="@Model.UserName" class="form-control form-control-lg" />
                            <label asp-for="@Model.UserName" class="form-label">Придумайте псевдоним</label>
                            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="@Model.Password" type="password" class="form-control form-control-lg" />
                            <label asp-for="@Model.Password" class="form-label">Придумайте пароль</label>
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control form-control-lg" />
                            <label asp-for="@Model.ConfirmPassword" class="form-label">Подтвердите пароль</label>
                            <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-info btn-block">Регистрация</button>
                        </div>

                        <p>Уже есть аккаунт? <a asp-area="Identity" asp-controller="Auth" asp-action="Login" class="link-info">Войти</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="/images/login-page.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>